Dialogue: 0,0:08:36.30,0:08:37.87,jd,,0,0,0,,Kejahatan sifat manusia,
Dialogue: 0,0:08:38.43,0:08:39.67,jd,,0,0,0,,konspirasi dan intrik,
Dialogue: 0,0:08:40.07,0:08:41.20,jd,,0,0,0,,saling menipu dan mengelabui.
Dialogue: 0,0:08:41.67,0:08:43.10,jd,,0,0,0,,Pembunuhan balas dendam.
Dialogue: 0,0:08:44.00,0:08:45.40,jd,,0,0,0,,Selama lebih dari sepuluh tahun ini,
Dialogue: 0,0:08:45.50,0:08:46.90,jd,,0,0,0,,aku sudah menyaksikan
Dialogue: 0,0:08:47.20,0:08:48.50,jd,,0,0,0,,terlalu banyak.
Dialogue: 0,0:09:05.63,0:09:09.17,jd,,0,0,0,,Segala sesuatu hidup dan mati tanpa kepastian,
Dialogue: 0,0:09:09.50,0:09:12.23,jd,,0,0,0,,hanya kejahatan yang abadi.
Dialogue: 0,0:09:20.60,0:09:21.30,jd,,0,0,0,,Guru,
Dialogue: 0,0:09:21.30,0:09:23.17,jd,,0,0,0,,sudah tepat satu hari satu malam.
Dialogue: 0,0:09:23.83,0:09:26.03,jd,,0,0,0,,Penderma Zhang sampai sekarang belum keluar.
Dialogue: 0,0:09:27.83,0:09:29.87,jd,,0,0,0,,Jodoh buruk sepanjang hidup,
Dialogue: 0,0:09:29.87,0:09:32.17,jd,,0,0,0,,kebencian seumur hidup,
Dialogue: 0,0:09:32.17,0:09:36.63,jd,,0,0,0,,mana mungkin mudah untuk melepaskannya.
Dialogue: 0,0:09:44.20,0:09:46.30,jd,,0,0,0,,Murid memohon Guru menggunakan kekuatan besar,
Dialogue: 0,0:09:46.30,0:09:48.03,jd,,0,0,0,,dengan kekuatan Buddha tak terbatas,
Dialogue: 0,0:09:48.03,0:09:49.77,jd,,0,0,0,,menuntun dan mencerahkannya.
Dialogue: 0,0:09:50.57,0:09:53.17,jd,,0,0,0,,Dengan welas asih Buddha menghilangkan kekerasan hatinya,
Dialogue: 0,0:09:53.60,0:09:55.23,jd,,0,0,0,,membantunya terbebas dari lautan penderitaan iblis hati.
Dialogue: 0,0:09:56.63,0:09:59.70,jd,,0,0,0,,Bukan Gurumu tidak mau menuntun orang ini,
Dialogue: 0,0:10:00.23,0:10:02.23,jd,,0,0,0,,tapi dia telah melalui banyak kesulitan,
Dialogue: 0,0:10:02.37,0:10:03.83,jd,,0,0,0,,seumur hidup penuh lika-liku,
Dialogue: 0,0:10:04.20,0:10:05.77,jd,,0,0,0,,sampai hari ini,
Dialogue: 0,0:10:05.97,0:10:09.00,jd,,0,0,0,,hatinya sudah kokoh seperti batu karang.
Dialogue: 0,0:10:09.17,0:10:13.50,jd,,0,0,0,,Orang luar sudah tidak bisa mempengaruhinya lagi.
Dialogue: 0,0:10:13.80,0:10:14.87,jd,,0,0,0,,Baik itu kamu,
Dialogue: 0,0:10:15.17,0:10:18.00,jd,,0,0,0,,atau Puzhi, semuanya salah.
Dialogue: 0,0:10:18.00,0:10:19.30,jd,,0,0,0,,Adik Seperguruan,
Dialogue: 0,0:10:19.30,0:10:21.27,jd,,0,0,0,,meski kau berniat baik,
Dialogue: 0,0:10:21.27,0:10:23.10,jd,,0,0,0,,tapi justru menciptakan buah kejahatan.
Dialogue: 0,0:10:23.63,0:10:25.97,jd,,0,0,0,,Kau sendiri masih sulit mencapai kebaikan tertinggi,
Dialogue: 0,0:10:25.97,0:10:28.37,jd,,0,0,0,,mengapa memaksa orang lain?
Dialogue: 0,0:10:29.43,0:10:34.00,jd,,0,0,0,,Dosa manusia juga adalah jalan kultivasi masing-masing.
Dialogue: 0,0:10:35.00,0:10:37.43,jd,,0,0,0,,Puzhi bertekad mengejar dunia tanpa kejahatan,
Dialogue: 0,0:10:37.70,0:10:39.57,jd,,0,0,0,,ini adalah sebab kebaikan besar,
Dialogue: 0,0:10:40.10,0:10:42.00,jd,,0,0,0,,tapi justru menimbulkan tragedi Desa Caomiao,
Dialogue: 0,0:10:42.03,0:10:43.80,jd,,0,0,0,,menuai buah kejahatan besar.
Dialogue: 0,0:10:45.17,0:10:46.20,jd,,0,0,0,,Dan buah kejahatan ini,
Dialogue: 0,0:10:46.63,0:10:49.17,jd,,0,0,0,,justru menjadi sebab segala hal dalam hidupku.
Dialogue: 0,0:10:52.50,0:10:55.50,jd,,0,0,0,,Melihat kembali hidupku yang penuh lika-liku,
Dialogue: 0,0:10:56.40,0:10:57.83,jd,,0,0,0,,tapi justru setiap peristiwa,
Dialogue: 0,0:10:58.00,0:10:59.00,jd,,0,0,0,,setiap orang,
Dialogue: 0,0:10:59.27,0:11:01.20,jd,,0,0,0,,yang menciptakan diriku hari ini.
Dialogue: 0,0:11:01.40,0:11:04.03,jd,,0,0,0,,Karena segala sebab dan akibat berkumpul padaku,
Dialogue: 0,0:11:04.40,0:11:06.07,jd,,0,0,0,,apakah sebab ini baik atau jahat,
Dialogue: 0,0:11:06.57,0:11:08.37,jd,,0,0,0,,buah yang dihasilkan benar atau sesat,
Dialogue: 0,0:11:09.00,0:11:10.67,jd,,0,0,0,,semua ditentukan oleh pikiranku.
Dialogue: 0,0:11:12.10,0:11:13.97,jd,,0,0,0,,Maka biarkan aku memikul karma ini,
Dialogue: 0,0:11:14.63,0:11:15.80,jd,,0,0,0,,memikul segalanya,
Dialogue: 0,0:11:16.63,0:11:18.77,jd,,0,0,0,,dan melangkah di jalanku sendiri.
Dialogue: 0,0:11:19.76,0:11:34.76,jd,,1,1,0,,Join channel telegram @dongworld agar tidak ketinggalan update.\NDonghua ini diterjemahkan oleh Dongworld.
Dialogue: 0,0:12:02.20,0:12:04.30,jd,,0,0,0,,Kau berhasil.
Dialogue: 0,0:12:36.17,0:12:38.23,jd,,0,0,0,,Segala balasan dosa dalam tubuh Adik Seperguruan.
Dialogue: 0,0:12:38.27,0:12:39.80,jd,,0,0,0,,Ternyata sudah sirna.
Dialogue: 0,0:12:45.27,0:12:47.47,jd,,0,0,0,,Penderma dengan hati penuh welas asih,
Dialogue: 0,0:12:47.47,0:12:49.50,jd,,0,0,0,,menghapus ribuan balasan dosa.
Dialogue: 0,0:12:49.77,0:12:52.47,jd,,0,0,0,,Baik terhadap Puzhi maupun semua makhluk,
Dialogue: 0,0:12:52.83,0:12:54.80,jd,,0,0,0,,ini adalah berkah tak terhingga.
Dialogue: 0,0:12:55.67,0:12:58.07,jd,,0,0,0,,Mencapai buah pencerahan Buddha.
Dialogue: 0,0:12:59.40,0:13:00.40,jd,,0,0,0,,Biksu,
Dialogue: 0,0:13:01.07,0:13:03.00,jd,,0,0,0,,Penderma ada keperluan apa?
Dialogue: 0,0:13:04.87,0:13:06.30,jd,,0,0,0,,Yang telah wafat sebaiknya dimakamkan.
Dialogue: 0,0:13:06.97,0:13:08.03,jd,,0,0,0,,Kau,
Dialogue: 0,0:13:08.63,0:13:10.07,jd,,0,0,0,,jasad Guru Puzhi ini,
Dialogue: 0,0:13:11.23,0:13:12.43,jd,,0,0,0,,kremasikan dan makamkanlah.
Dialogue: 0,0:13:17.10,0:13:20.90,jd,,0,0,0,,Penderma sudah melepaskan keterikatan dalam hati.
Dialogue: 0,0:13:36.07,0:13:37.67,jd,,0,0,0,,Aku dengan biksu ini,
Dialogue: 0,0:13:38.30,0:13:39.97,jd,,0,0,0,,dulu hanya bertemu sekali,
Dialogue: 0,0:13:41.47,0:13:43.60,jd,,0,0,0,,tapi pernah bersujud di depannya,
Dialogue: 0,0:13:44.20,0:13:46.20,jd,,0,0,0,,dengan rela hati memberi hormat padanya.
Dialogue: 0,0:13:49.17,0:13:50.37,jd,,0,0,0,,Memanggilnya Guru.
Dialogue: 0,0:13:51.77,0:13:53.03,jd,,0,0,0,,Dia pernah menolongku,
Dialogue: 0,0:13:53.60,0:13:54.67,jd,,0,0,0,,juga mencelakakanku.
Dialogue: 0,0:13:57.63,0:13:58.70,jd,,0,0,0,,Tapi tanpanya,
Dialogue: 0,0:13:58.97,0:13:59.83,jd,,0,0,0,,tidak akan ada aku.
Dialogue: 0,0:14:01.67,0:14:03.00,jd,,0,0,0,,Yang telah pergi biarlah pergi.
Dialogue: 0,0:14:03.90,0:14:05.57,jd,,0,0,0,,Meski aku bukan murid Buddha,
Dialogue: 0,0:14:05.87,0:14:07.87,jd,,0,0,0,,aku tahu agama Buddha paling mementingkan reinkarnasi.
Dialogue: 0,0:14:10.27,0:14:12.77,jd,,0,0,0,,Sampai mati pun dia tidak mau dimakamkan,
Dialogue: 0,0:14:15.90,0:14:18.50,jd,,0,0,0,,bisa diketahui penyesalan dalam hatinya.
Dialogue: 0,0:14:18.50,0:14:33.50,jd,,1,1,0,,Join channel telegram @dongworld agar tidak ketinggalan update.\NDonghua ini diterjemahkan oleh Dongworld.
Dialogue: 0,0:14:37.40,0:14:37.70,jd,,0,0,0,,Kau,
Dialogue: 0,0:14:39.00,0:14:40.30,jd,,0,0,0,,beristirahatlah dengan tenang.
Dialogue: 0,0:14:54.07,0:14:55.20,jd,,0,0,0,,Adik Seperguruan,
Dialogue: 0,0:14:55.90,0:14:57.77,jd,,0,0,0,,akhirnya kau bisa beristirahat.
Dialogue: 0,0:15:05.47,0:15:07.90,jd,,0,0,0,,Adik Seperguruan,
Dialogue: 0,0:15:08.70,0:15:10.63,jd,,0,0,0,,dosamu telah ditebus,
Dialogue: 0,0:15:10.63,0:15:12.40,jd,,0,0,0,,keinginanmu telah terpenuhi.
Dialogue: 0,0:15:12.87,0:15:13.97,jd,,0,0,0,,Kakak seperguruan,
Dialogue: 0,0:15:14.37,0:15:16.20,jd,,0,0,0,,juga turut senang untukmu.
Dialogue: 0,0:15:16.97,0:15:19.10,jd,,0,0,0,,Mengakhiri jodoh kehidupan lampau,
Dialogue: 0,0:15:19.27,0:15:21.63,jd,,0,0,0,,melunasi utang kehidupan ini.
Dialogue: 0,0:15:22.30,0:15:24.23,jd,,0,0,0,,Kita pernah satu perguruan,
Dialogue: 0,0:15:24.83,0:15:29.43,jd,,0,0,0,,semoga bertemu lagi di samudera Buddha.
